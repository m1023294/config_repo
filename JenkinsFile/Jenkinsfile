pipeline {
    agent any
    stages {
		stage('load') {
			steps {
				script {
					props = readProperties file: 'Properties/pipeline.properties'
					echo 'load success'
				}
			}
		}
		stage('read') {
			steps {
				git url: props.GIT_URL,
                branch: props.BRANCH
				echo 'read success'
			}
		}
		/*stage('scan') {
            steps {
				sh props.SONAR_SCAN+' '+props.SONAR_HOST
				echo 'scan success'
			}
        }*/
		stage('build') {
            steps {
				sh props.MAVEN_BUILD
				echo 'build success'
            }
		}
		stage('deploy') {
            steps {
				sh props.TOMCAT_DEPLOY+' '+props.TOMCAT_LOCATION
				echo 'deploy success'
            }
		}
	}
}